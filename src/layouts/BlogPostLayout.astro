            <div class="lang-switcher" role="group" aria-label="Language selection">
                <button type="button" class="lang-btn" data-lang-switch="en" aria-pressed="true">EN</button>
                <button type="button" class="lang-btn" data-lang-switch="vi" aria-pressed="false">VI</button>
            </div>
