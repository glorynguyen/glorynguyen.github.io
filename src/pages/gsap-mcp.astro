    <style>
        :root {
            --color-primary: #8b5cf6;
            /* Purple - animation/creative theme */
            --color-primary-dark: #7c3aed;
            --color-secondary: #06b6d4;
            --color-text: #1f2937;
            --color-text-light: #6b7280;
            --color-bg: #ffffff;
            --color-bg-alt: #f8fafc;
            --color-bg-dark: #0f172a;
            --color-border: #e2e8f0;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            --radius: 8px;
            --radius-lg: 12px;
            --max-width: 1200px;
        }

        *,
        *::before,
        *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', system-ui, sans-serif;
            line-height: 1.6;
            color: var(--color-text);
            background-color: var(--color-bg);
        }

        .container {
            max-width: var(--max-width);
            margin: 0 auto;
            padding: 0 24px;
        }

        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: var(--color-primary);
            color: white;
            padding: 8px 16px;
            z-index: 100;
            text-decoration: none;
        }

        .skip-link:focus {
            top: 0;
        }

        /* Navigation */
        nav {
            background: var(--color-bg);
            border-bottom: 1px solid var(--color-border);
            position: sticky;
            top: 0;
            z-index: 50;
            box-shadow: var(--shadow-sm);
        }

        .nav-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 0;
        }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
            color: var(--color-text);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 8px;
            align-items: center;
        }

        .nav-links a {
            color: var(--color-text);
            text-decoration: none;
            padding: 8px 16px;
            border-radius: var(--radius);
            font-weight: 500;
            font-size: 0.95rem;
            transition: 0.2s;
        }

        .nav-links a:hover {
            background-color: var(--color-bg-alt);
            color: var(--color-primary);
        }

        .nav-cta {
            background: var(--color-primary) !important;
            color: white !important;
        }

        .nav-cta:hover {
            background: var(--color-primary-dark) !important;
        }

        /* Hero */
        .hero {
            background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 50%, #1e293b 100%);
            color: white;
            padding: 80px 0 100px;
            overflow: hidden;
        }

        .hero-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(139, 92, 246, 0.2);
            border: 1px solid rgba(139, 92, 246, 0.4);
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85rem;
            color: #c4b5fd;
            margin-bottom: 16px;
        }

        .hero h1 {
            font-size: clamp(2.5rem, 5vw, 3.5rem);
            font-weight: 700;
            line-height: 1.1;
            margin-bottom: 24px;
        }

        .hero h1 span {
            color: #c4b5fd;
        }

        .hero-description {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 32px;
            max-width: 540px;
        }

        .hero-buttons {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 14px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            text-decoration: none;
            transition: 0.2s;
            cursor: pointer;
            border: none;
        }

        .btn-primary {
            background: var(--color-primary);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Code Window */
        .code-window {
            background: #1e1e1e;
            border-radius: var(--radius-lg);
            border: 1px solid #334155;
            overflow: hidden;
            font-family: 'Monaco', monospace;
            font-size: 0.85rem;
        }

        .code-header {
            background: #334155;
            padding: 12px 16px;
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .code-content {
            padding: 20px;
            color: #e2e8f0;
        }

        .mcp-tool {
            color: #c4b5fd;
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
        }

        .code-comment {
            color: #94a3b8;
        }

        .code-success {
            color: #86efac;
        }

        .code-string {
            color: #fbbf24;
        }

        /* Features */
        .features {
            padding: 100px 0;
            background: var(--color-bg);
        }

        .section-header {
            text-align: center;
            max-width: 700px;
            margin: 0 auto 60px;
        }

        .section-header h2 {
            font-size: 2.25rem;
            margin-bottom: 16px;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 32px;
        }

        .feature-card {
            padding: 32px;
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            transition: 0.3s;
        }

        .feature-card:hover {
            border-color: var(--color-primary);
            box-shadow: var(--shadow-md);
            transform: translateY(-4px);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: var(--color-bg-alt);
            color: var(--color-primary);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        /* Installation */
        .install-section {
            padding: 100px 0;
            background: var(--color-bg-alt);
        }

        .install-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        .install-card {
            background: white;
            padding: 32px;
            border-radius: var(--radius-lg);
            border: 1px solid var(--color-border);
        }

        .install-card h3 {
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .code-block {
            background: #0f172a;
            color: #f8fafc;
            padding: 16px;
            border-radius: 8px;
            position: relative;
            margin: 16px 0;
            font-family: monospace;
            overflow-x: auto;
        }

        .copy-btn {
            position: absolute;
            right: 12px;
            top: 12px;
            background: transparent;
            border: none;
            color: #94a3b8;
            cursor: pointer;
        }

        /* Tools Table */
        .tools-section {
            padding: 100px 0;
        }

        .tools-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 32px;
        }

        .tools-table th,
        .tools-table td {
            text-align: left;
            padding: 16px;
            border-bottom: 1px solid var(--color-border);
        }

        .tools-table th {
            background: var(--color-bg-alt);
            font-weight: 600;
        }

        .tool-tag {
            font-family: monospace;
            background: #f1f5f9;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        /* Footer */
        footer {
            background: #0f172a;
            color: white;
            padding: 80px 0 40px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 40px;
            margin-bottom: 60px;
        }

        .footer-column h4 {
            margin-bottom: 20px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #94a3b8;
        }

        .footer-column ul {
            list-style: none;
        }

        .footer-column li {
            margin-bottom: 12px;
        }

        .footer-column a {
            color: #cbd5e1;
            text-decoration: none;
            transition: 0.2s;
        }

        .footer-column a:hover {
            color: white;
        }

        .footer-bottom {
            border-top: 1px solid #334155;
            padding-top: 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.9rem;
            color: #94a3b8;
        }

        @media (max-width: 968px) {

            .hero-content,
            .install-grid {
                grid-template-columns: 1fr;
            }

            .hero {
                text-align: center;
            }

            .hero-description {
                margin: 0 auto 32px;
            }

            .hero-buttons {
                justify-content: center;
            }

            .footer-grid {
                grid-template-columns: 1fr 1fr;
            }

            .nav-links li:not(:last-child):not(:nth-last-child(2)) {
                display: none;
            }
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 16px;
            }

            .hero {
                padding: 60px 0 80px;
            }

            .features,
            .install-section,
            .tools-section {
                padding: 60px 0;
            }

            .section-header {
                margin-bottom: 40px;
            }

            .section-header h2 {
                font-size: 1.75rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .feature-card {
                padding: 24px;
            }

            .install-card {
                padding: 24px;
            }

            .code-block {
                font-size: 0.75rem;
                padding: 12px;
            }

            .code-block pre {
                font-size: 0.7rem;
            }

            /* Responsive table */
            .tools-table {
                display: block;
            }

            .tools-table thead {
                display: none;
            }

            .tools-table tbody {
                display: block;
            }

            .tools-table tr {
                display: block;
                margin-bottom: 16px;
                padding: 16px;
                border: 1px solid var(--color-border);
                border-radius: var(--radius);
                background: var(--color-bg-alt);
            }

            .tools-table td {
                display: block;
                padding: 8px 0;
                border: none;
                text-align: left;
            }

            .tools-table td:first-child {
                font-weight: 600;
                color: var(--color-primary);
                font-size: 0.85rem;
                padding-bottom: 4px;
            }

            .tools-table td:nth-child(2) {
                padding-bottom: 8px;
            }

            .tools-table td:last-child {
                color: var(--color-text-light);
                font-size: 0.9rem;
            }

            .footer-grid {
                grid-template-columns: 1fr;
                gap: 32px;
            }

            .footer-bottom {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            footer {
                padding: 60px 0 30px;
            }
        }

        @media (max-width: 480px) {
            .nav-content {
                flex-wrap: wrap;
                gap: 12px;
            }

            .nav-brand {
                font-size: 1rem;
            }

            .nav-links {
                gap: 4px;
            }

            .nav-links a {
                padding: 6px 12px;
                font-size: 0.85rem;
            }

            .hero h1 {
                font-size: 1.75rem;
            }

            .hero-description {
                font-size: 1rem;
            }

            .hero-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .code-window {
                font-size: 0.75rem;
            }

            .code-content {
                padding: 16px;
            }

            .hero-badge {
                font-size: 0.75rem;
                padding: 4px 10px;
            }
        }
    </style>
</head>

